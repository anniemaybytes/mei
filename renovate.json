{
  "extends": [
    "config:recommended",
    "docker:disableMajor"
  ],
  "labels": [
    "kind/deps"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "kind/security"
    ]
  },
  "minimumReleaseAge": "3 days",
  "semanticCommits": "disabled",
  "ignoreDeps": [
    "roave/security-advisories",
    "thecodingmachine/php"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 3am on friday"
    ]
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "require-dev"
      ],
      "extends": [
        "schedule:weekends"
      ]
    },
    {
      "matchPackagePrefixes": [
        "phpstan/"
      ],
      "automerge": true,
      "groupName": "phpstan monorepo"
    },
    {
      "matchPackageNames": [
        "overtrue/phplint"
      ],
      "automerge": true,
      "allowedVersions": "<6.0.0"
    },
    {
      "matchPackageNames": [
        "squizlabs/php_codesniffer"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "phpunit/phpunit"
      ],
      "automerge": true
    }
  ]
}
