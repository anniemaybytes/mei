# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
insert_final_newline = true
charset = utf-8
indent_size = 4
indent_style = space
max_line_length = 120
tab_width = 4

[*.json]
indent_size = 2
tab_width = 2

[*.yml]
insert_final_newline = false

[*.xml]
insert_final_newline = false

[*.xml.dist]
insert_final_newline = false

[*.neon.dist]
insert_final_newline = false
